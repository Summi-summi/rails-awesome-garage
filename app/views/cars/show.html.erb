<h2>Garage</h2>
<% if @car.favourite %>
  <p>This car is in your favourite garage.</p>
  <%= button_to "Remove from favourite Garage", car_favourite_path(@car), method: :delete %>
<% else %>
  <%= simple_form_for([@car, @favourite]) do |f| %>
    <%= f.button :submit, "Add to Favourite Garage" %>
  <% end %>
<% end %>

